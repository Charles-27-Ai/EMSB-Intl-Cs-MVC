@model EMSB_Intl_Cs_MCV.Models.School
    
    <div class="row text-left mx-2 mb-3">
        <div class="col-lg-5 mb-3">
            @*Carousel*@
            <div id="schoolCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.ImgUrl[0]" class="d-block w-100" alt="Carousel image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.ImgUrl[1]" class="d-block w-100" alt="Carousel image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.ImgUrl[2]" class="d-block w-100" alt="Carousel image 3">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.ImgUrl[3]" class="d-block w-100" alt="Carousel image 4">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#schoolCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#schoolCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="row">

                <div class="col-sm-12 mt-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-intro.png" class="img-fluid" alt="Intro">
                        <div class="media-body">
                            <p class="ml-2 mt-1">@Model.Intro</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 mb-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-address.png" class="img-fluid" alt="Address">
                        <div class="media-body">
                            <p class="ml-2 mt-1">@Model.Address</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-6 my-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-call.png" class="img-fluid" alt="Phone number">
                        <div class="media-body">
                            <p class="ml-2 mt-1">@Model.Phone</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-6 my-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-email.png" class="img-fluid" alt="Email">
                        <div class="media-body">
                            <p class="ml-2 mt-1">@Model.Email</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-6 my-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-website.png" class="img-fluid" alt="Website">
                        <div class="media-body">
                            <p class="ml-2 mt-1">@Model.Website</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-6 my-1">
                    <div class="media">
                        <img src="/Assets/Images/schools/school-calender.png" class="img-fluid" alt="Calendar">
                        <div class="media-body">
                            <p class="ml-2 mt-1">2018-2019 School Calendar</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 my-1">

                    <div class="media">
                        <img src="/Assets/Images/schools/school-mission.png" class="img-fluid" alt="Missions">
                        <div class="media-body">
                            <button type="button" class="dropdown-btn btn btn-link text-decoration-none" data-toggle="collapse" href="#schoolPhilo" aria-expanded="False" aria-controls="schoolPhilo">

                                <div class="d-flex justify-content-start align-items-center">
                                    <p class="dark-grey-font"><b>Philosophy / Mission / Goal</b></p>
                                    @*<button type="button" class="@plusBtnClass" onclick="toggleClass(@philoIsOpen)">
                                        <img src="/Assets/Images/schools/plus-btn.png" class="ml-1 mb-2 pb-2" alt="Plus button" />
                                    </button>
                                    <button type="button" class="@minusBtnClass" onclick="!@philoIsOpen">
                                        <img src="/Assets/Images/schools/minus-btn.png" class="ml-1 mb-2 pb-2" alt="Minus button" />
                                    </button>*@
                                    <img src="/Assets/Images/schools/plus-btn.png" class="ml-3 mb-2 pb-2" alt="Plus button" />
                                </div>
                            </button>

                        </div>
                    </div>



                    @*Philo-Dropdown*@
                    <div class="collapse" id="schoolPhilo">
                        <div class="d-flex flex-column align-items-start ml-1">
                            <div class="media">
                                <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                <div class="media-body">
                                    <p class="ml-3">@Model.Philo[0]</p>
                                </div>
                            </div>
                            <div class="media">
                                <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                <div class="media-body">
                                    <p class="ml-3">@Model.Philo[1]</p>
                                </div>
                            </div>
                            <div class="media">
                                <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                <div class="media-body">
                                    <p class="ml-3">@Model.Philo[2]</p>
                                </div>
                            </div>
                            @*<div class="d-flex justify-content-start align-items-center">
                            <img src="" class=""/>*@
                            @*<FontAwesomeIcon icon={ faCheckCircle } size="sm" class="mt-1 school-philo-list-icon" />*@
                            @*<p class="ml-3">
                                    @Model.Philo[0]
                                </p>
                            </div>*@

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>