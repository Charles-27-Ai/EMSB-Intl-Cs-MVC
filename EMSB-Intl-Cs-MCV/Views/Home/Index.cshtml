@{
    ViewBag.Title = "EMSB International Students";
}

    <div class="container homeCarousel">
        <div class="row">
            <div class="col-md-7">
                @*Carousel*@
                <div id="homeCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Assets/Images/carousel-1.jpeg" class="d-block w-100" alt="Carousel image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="/Assets/Images/carousel-2.jpeg" class="d-block w-100" alt="Carousel image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="/Assets/Images/carousel-3.jpeg" class="d-block w-100" alt="Carousel image 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-5">
                @*Jumbotron*@
                <div class="jumbotron">
                    <h1 class="display-5">EMSB International</h1>
                    <p class="lead">Être Bilingue, C'est Gagnant!</p>
                    <a class="btn btn-primary btn-lg" href="#" role="button">Apply Now</a>
                </div>
            </div>
        </div>
    </div>
    @*Announcement section*@
    @Html.Partial("_Announce")

    @*Stories section*@
    @Html.Partial("_Stories")
    @*Gallery section*@
    @Html.Partial("_Galleries")
