@using EMSB_Intl_Cs_MCV.Models
@model dynamic

<div class="container px-5">
    @foreach (FieldTripDetail detail in Model.Details)
    {
        <nav aria-label="breadcrumb" class="mx-2 school-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Students" class="lato-font">Field Trips</a>
                </li>
                <li class="breadcrumb-item active lato-font" aria-current="page">
                    @detail.TripName
                </li>
            </ol>
        </nav>

        <div class="row text-left mx-2 mb-3">

            <div class="col-lg-5 mb-3">
                <div class="d-flex flex-column align-items-lg-start">
                    @*Carousel*@
                    <div id="fieldTripCarousel" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@detail.ImgUrl[0]" class="d-block w-100" alt="Carousel image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="@detail.ImgUrl[1]" class="d-block w-100" alt="Carousel image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="@detail.ImgUrl[2]" class="d-block w-100" alt="Carousel image 3">
                            </div>
                            <div class="carousel-item">
                                <img src="@detail.ImgUrl[3]" class="d-block w-100" alt="Carousel image 4">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#fieldTripCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#fieldTripCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    @*Trip info*@
                    <div class="media mt-4">
                        <img src="/Assets/Images/schools/school-address.png" alt="Intro" class="img-fluid">
                        <div class="media-body ml-2 mt-1">
                            <p>@detail.Location</p>
                        </div>
                    </div>
                    <div class="media">
                        <img src="@detail.IntroIcon" class="img-fluid" alt="Intro">
                        <div class="media-body ml-2 mt-1">
                            <b>@detail.TripName</b>
                            <p>@detail.TripIntro</p>
                        </div>
                    </div>
                </div>
            </div>

            @*Details*@
            <div class="col-lg-7">
                <div class="row">

                    <div class="col-sm-12 mt-0">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-date-time.png" class="img-fluid" alt="Date">
                            <div class="media-body ml-2 mt-1">
                                <b>Date and Departure Time</b>
                                <p>@detail.DateTime</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-meet.png" class="img-fluid" alt="Meeting point">
                            <div class="media-body ml-2 mt-1">
                                <b>Meeting point</b>
                                <p>@detail.MeetingPoint</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-back.png" class="img-fluid" alt="Back to Montreal">
                            <div class="media-body ml-2 mt-1">
                                <b>Back to Montreal</b>
                                <p>@detail.Back</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-transport.png" class="img-fluid" alt="Transportation">
                            <div class="media-body ml-2 mt-1">
                                <b>Transportation</b>
                                <p>@detail.Transport</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-to-bring.png" class="img-fluid" alt="To bring">
                            <div class="media-body ml-2 mt-1">
                                <b>What to bring</b>
                                <p>@detail.ToBring</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-to-wear.png" class="img-fluid" alt="To wear">
                            <div class="media-body ml-2 mt-1">
                                <b>What to wear</b>
                                <p>@detail.ToWear</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <div class="media">
                            <img src="/Assets/Images/fieldTrips/ft-schedule.png" class="img-fluid" alt="Schedule">
                            <div class="media-body">
                                <button type="button" class="dropdown-btn btn btn-link text-decoration-none" data-toggle="collapse" href="#fieldTripSchedule" aria-expanded="False" aria-controls="fieldTripSchedule">
                                    <div class="d-flex justify-content-start align-items-center">
                                        <p class="dark-grey-font"><b>Field trip schedule</b></p>
                                        <img src="/Assets/Images/schools/plus-btn.png" class="ml-3 mb-2 pb-2" alt="Plus button" />
                                    </div>
                                </button>
                            </div>
                        </div>

                        @* Schedule dropdown *@
                        <div class="collapse" id="fieldTripSchedule">
                            <div class="d-flex flex-column align-items-start ml-1">
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[0]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[1]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[2]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[3]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[4]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[5]</p>
                                    </div>
                                </div>
                                <div class="media">
                                    <img src="/Assets/Images/schools/check-btn.png" class="mt-1 school-philo-list-icon" alt="Philosophy items">
                                    <div class="media-body">
                                        <p class="ml-3">@detail.Schedule[6]</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-lg-6 my-1">
                        <a href="#" alt="FAQ from staff">
                            <div class="media">
                                <img src="/Assets/Images/fieldTrips/ft-faq-small.png" alt="Field trip FAQ" class="img-fluid" />
                                <div class="media-body ml-2 mt-1">
                                    <b>Have questions? Contact us!</b>
                                </div>
                            </div>
                        </a>
                    </div>

                </div>
            </div>

        </div>
    }


</div>

